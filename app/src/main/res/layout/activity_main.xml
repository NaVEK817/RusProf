<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/lay1_new"
    >
    <fragment
        android:id="@+id/egg_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.example.rusprof.FragmentEasterEgg"
        android:layout_gravity="center"
        tools:layout="@layout/egg_fragment"/>
    <fragment
        android:id="@+id/justmaket"
        tools:layout="@layout/void_fragment"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_weight="0.005"
        android:name="com.example.rusprof.FragmentVoid"/>
    <fragment
        android:id="@+id/mainchoose_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:name="com.example.rusprof.FragmenMainActivityMainChoose"
        android:layout_weight="1"
        tools:layout="@layout/mainchoose_fragment"
         />

    <fragment
        android:id="@+id/mainexit_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.example.rusprof.FragmentExitAll"
        tools:layout="@layout/mainexit_fragment"
        android:layout_gravity="center"/>

</LinearLayout>