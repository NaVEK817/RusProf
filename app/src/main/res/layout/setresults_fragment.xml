<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/universal_new"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textalltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="@dimen/tesxt_size"
        android:fontFamily="@string/font_family_medium"
        android:text="Пройденных тестов:"/>
    <TextView
        android:id="@+id/textall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="@dimen/tesxt_size"
        android:fontFamily="@string/font_family_medium"/>
    <TextView
        android:id="@+id/reshtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="@dimen/tesxt_size"
        android:fontFamily="@string/font_family_medium"
        android:text="Решённых верно:"/>
    <TextView
        android:id="@+id/resh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="@dimen/tesxt_size"
        android:fontFamily="@string/font_family_medium"/>
    <TextView
        android:id="@+id/proctext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="@dimen/tesxt_size"
        android:fontFamily="@string/font_family_medium"
        android:text="Процент верных решений:"/>
    <TextView
        android:id="@+id/proc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="4"
        android:textColor="#000000"
        android:fontFamily="@string/font_family_medium"
        android:textSize="@dimen/tesxt_size"/>
    <TextView
        android:id="@+id/octext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="@dimen/tesxt_size"
        android:fontFamily="@string/font_family_medium"
        android:text="Отметка:"/>
    <TextView
        android:id="@+id/oc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="1"
        android:textColor="#000000"
        android:fontFamily="@string/font_family_medium"
        android:textSize="@dimen/tesxt_size" />
</LinearLayout>